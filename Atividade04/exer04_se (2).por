// Divisão por 2 Leia um número e informe se ele é par ou ímpar.

programa {
  funcao inicio() {

    // algoritmo "Par_ou_impare"

    inteiro numero

    escreva("Digite um número: ")
    leia(numero)
    
    se (numero % 0){
        escreva("O número é par.")
    }senao
        escreva("O número é ímpar.")
    
    
  }
}
