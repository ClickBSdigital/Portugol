// 1 Verificar maioridade Crie um algoritmo que leia a idade 
// de uma pessoa e diga se ela é maior de idade (18 anos ou mais) ou menor de idade. 


programa {
  funcao inicio() {

    // algoritmo "Verificar Maioridade"

    inteiro idade

    escreva("Digite a sua idade: ")
    leia(idade)
    
    se (idade >= 18){
        escreva("Você é maior de idade.")
    }senao
        escreva("Você é menor de idade.")
    
    
  }
}
