// 41 - Temperatura em Kelvin Converta uma 
// temperatura fornecida em Celsius para Kelvin.  

programa {
  funcao inicio() {

    // algoritmo "Temperatura em Kelvin"

    real celsius, kelvin

    escreva("Digite a temperatura em graus Celsius: ")
    leia(celsius)
    
    kelvin = celsius + 273.15
    escreva("Temperatura em Kelvin: ", kelvin)

  }
}

