// 12 - Faça um algoritmo que calcule e mostre a
// área de um quadrado.
// Sabe-se que: A = lado * lado;

programa {
  funcao inicio() {
    
    // algoritmo "CalculoAreaQuadrado"
    // Declaração de variáveis
    real lado, area
  

    // Solicita ao usuário o comprimento do lado do quadrado
    escreva("Digite o comprimento do lado do quadrado: ")
    leia(lado)

    // Calcula a área
    area = lado * lado

    // Exibe a área
    escreva("A área do quadrado é: ", area)


  }
}
