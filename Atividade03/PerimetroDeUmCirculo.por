// 12. Perímetro de um Círculo
// Peça o raio de um círculo e calcule seu perímetro.
//  Fórmula: P = 2 × π × raio.

programa {
  funcao inicio() {

    // algoritmo "PerimetroDeUmCirculo"
    real raio, perimetro

    escreva("Digite o raio do círculo: ")
    leia(raio)
    perimetro = 2 * 3.14 * raio
    escreva("O perímetro do círculo é: ", perimetro)

    
  }
}
