// 8. Conversão de Moeda

// Peça um valor em reais e exiba o equivalente 
// em dólares, considerando um câmbio fixo
// de R$5,00 por dólar.

programa {
  funcao inicio() {

    // algoritmo "ConversaoDeMoeda"

    real valorReais, valorDolares

    escreva("Digite o valor em reais: ")
    leia(valorReais)
    valorDolares = valorReais * 6.7
    escreva("O equivalente em dólares é: ", valorDolares)

    
  }
}
